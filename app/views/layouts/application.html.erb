<!DOCTYPE html>
<html>
<head>
  <title><%= @title %></title>
  <%= csrf_meta_tag %>
  <!--[if lt IE 9]>
  <script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
  <![endif]-->    
  <%= stylesheet_link_tag 'style' %>
  <%= stylesheet_link_tag 'http://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,400,600,300' %>
  <!--[if lt IE 8]><%= stylesheet_link_tag 'blueprint/ie' %><![endif]-->
  <%#= stylesheet_link_tag 'custom', :media => 'screen' %>
</head>
<body>
	
	<div id='bg'><%= image_tag 'bg.png' %></div>
	
	<div id='right_bar'></div>
	
	<div id='header'>
		<div id='inner'>
        	<div class="text"><span class='normal'>Havenâ€™t joined us yet? </span><span class='red'><%= link_to 'Register here', signup_path %></span></div>
			<div class="login">
				<div class='field'>Username</div>
				<input></input>
				<div class='field'>Password</div>
				<input></input>
				<div class='btn'><%= image_tag('login.png') %></div>
			</div>
		</div>
	</div>
	
	<div id='cont'>
		<section class="round">
		  <% flash.each do |key, value| %>
		    <div class="flash <%= key %>"><%= value %></div>
		  <% end %>
		  <%= yield %>
		</section>
	</div>
	
	<div id='footer'></div>
	
	
	<%= debug(params) if Rails.env.development? %>

</body>
</html>
